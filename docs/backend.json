{
  "entities": {
    "Organization": {
      "title": "Organization",
      "type": "object",
      "description": "Represents a business using the Sendora platform.",
      "properties": {
        "companyName": {
          "type": "string",
          "description": "The name of the company."
        },
        "email": {
          "type": "string",
          "description": "The company's public email address.",
          "format": "email"
        },
        "phoneNumber": {
          "type": "string",
          "description": "The company's public phone number."
        },
        "address": {
          "type": "string",
          "description": "The company's physical address."
        },
        "thankYouMessage": {
          "type": "string",
          "description": "Default thank you message for receipts."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the organization was created."
        }
      },
      "required": ["companyName", "email", "createdAt"]
    },
    "Receipt": {
      "title": "Receipt",
      "type": "object",
      "description": "Represents a digital receipt.",
      "properties": {
        "organizationId": {
          "type": "string",
          "description": "The ID of the organization that created this receipt."
        },
        "receiptNumber": {
          "type": "string",
          "description": "A unique, sequential number for the receipt."
        },
        "customerName": { "type": "string" },
        "customerEmail": { "type": "string", "format": "email" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" }
            },
            "required": ["name", "quantity", "price"]
          }
        },
        "totalAmount": { "type": "number" },
        "thankYouMessage": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["organizationId", "receiptNumber", "customerName", "customerEmail", "items", "totalAmount", "createdAt"]
    },
    "Contact": {
      "title": "Contact",
      "type": "object",
      "description": "Represents a customer contact.",
      "properties": {
        "organizationId": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phoneNumber": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["organizationId", "name", "email", "createdAt"]
    },
    "Template": {
      "title": "Template",
      "type": "object",
      "description": "A reusable message template.",
      "properties": {
        "organizationId": { "type": "string" },
        "name": { "type": "string" },
        "content": { "type": "string" },
        "type": { "type": "string", "enum": ["receipt_thank_you"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["organizationId", "name", "content", "type", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/organizations/{organizationId}",
        "definition": {
          "schema": { "$ref": "#/entities/Organization" },
          "description": "Stores profile data for each organization, keyed by user UID."
        }
      },
      {
        "path": "/organizations/{organizationId}/receipts/{receiptId}",
        "definition": {
          "schema": { "$ref": "#/entities/Receipt" },
          "description": "Stores receipts for each organization."
        }
      },
      {
        "path": "/organizations/{organizationId}/contacts/{contactId}",
        "definition": {
          "schema": { "$ref": "#/entities/Contact" },
          "description": "Stores contacts for each organization."
        }
      },
      {
        "path": "/organizations/{organizationId}/templates/{templateId}",
        "definition": {
          "schema": { "$ref": "#/entities/Template" },
          "description": "Stores message templates for each organization."
        }
      }
    ]
  }
}
